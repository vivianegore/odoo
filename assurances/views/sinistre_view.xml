<?xml version="1.0"?>
<odoo>
    <!-- modèle de la vue list-->
    <record id="assurance_sinistre_view_list" model="ir.ui.view">
        <field name="name">assurance.sinistre.list </field>
        <field name="model">assurfaz.sinistre</field>
        <field name="arch" type="xml">
            <tree  >
                <field name="type_client" />      
                <field name="date_fait" /> 
                <field name="numero_police" /> 
                
            </tree>
        </field>
    </record>

    <!-- modèle de la vue Form -->
